{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "This is a simple NodeJS boilerplate project.",
  "main": "app.js",
  "scripts": {
    "start": "npm run serve",
    "serve": "node dist/app.js",
    "start:watch": "nodemon",
    "eslint": "npx eslint **/*.ts",
    "build": "tsc"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node ./src/app.ts",
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ]
  },
  "keywords": [
    "nodejs"
  ],
  "author": "Till Hoffmann",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "eslint": "^7.2.0",
    "eslint-plugin-import": "^2.21.2",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  }
}
